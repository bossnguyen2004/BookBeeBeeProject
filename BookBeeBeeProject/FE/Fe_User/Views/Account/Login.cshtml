@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";

}

@model Fe_User.DTO.Account.LoginDTO

<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <title>Đăng Nhập | Book Store</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="~/fonts/icomoon/style.css">
    <link rel="stylesheet" href="~/css/lg.css">
    <style>
        .custom-btn {
            background-color: #ff6600; /* Đổi thành màu cam */
            color: white; /* Màu chữ trắng */
            border: none;
            padding: 10px 15px;
            font-size: 16px;
            border-radius: 5px;
            cursor: pointer;
            width: 100%;
        }

            .custom-btn:hover {
                background-color: #e65c00; /* Màu đậm hơn khi hover */
            }
    </style>
</head>

<body>
    <div class="wrapper">
        <div class="title">
            Đăng Nhập
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "custom-form" }))
        {
            <div class="field">
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control", required = "required" })
                <label>Tên Đăng Nhập</label>
                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
            </div>

            <div class="field">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", required = "required" })
                <label>Mật Khẩu</label>
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>

            <div class="field">
                <input type="submit" value="Đăng Nhập" class="btn btn-block btn-primary">
            </div>

            <div class="fields">
                <input type="submit" value="Quên Mật Khẩu" class="custom-btn">
            </div>
        }

    </div>

    <script src="~/js1/jquery-3.3.1.min.js"></script>
    <script src="~/js1/popper.min.js"></script>
    <script src="~/js1/bootstrap.min.js"></script>
    <script src="~/js1/main.js"></script>
</body>
</html>


